{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Graph Schema",
  "description": "Defines the allowed node types and relationship types for the knowledge graph.",
  "type": "object",
  "properties": {
    "node_types": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["Document", "Party", "Contract", "Statute", "Event", "Location"]
      }
    },
    "relationship_types": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "PART_OF",
          "CONTRACTED_PARTY",
          "REFERRED_TO_STATUTE",
          "OCCURRED_AT_LOCATION",
          "ALLEGED_MISCONDUCT"
        ]
      }
    }
  },
  "required": ["node_types", "relationship_types"]
}
