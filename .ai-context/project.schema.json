{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "nodes": {
      "type": "array",
      "items": { "$ref": "#/definitions/node" }
    },
    "edges": {
      "type": "array",
      "items": { "$ref": "#/definitions/edge" }
    }
  },
  "definitions": {
    "node": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "type": { "type": "string" },
        "name": { "type": "string" }
      },
      "required": ["id", "type", "name"]
    },
    "edge": {
      "type": "object",
      "properties": {
        "source": { "type": "string" },
        "target": { "type": "string" },
        "relationship": { "type": "string" },
        "proof": { 
          "type": "string",
          "pattern": "^doc:[^|]+\\|page:\\d+\\|sha256=[a-f0-9]{64}$"
        }
      },
      "required": ["source", "target", "relationship", "proof"]
    }
  }
}
